{
  "name": "@sixriver/template-common",
  "version": "0.0.0-development",
  "description": "Sixriver Template Common",
  "keywords": [],
  "repository": {
    "type": "git",
    "url": "https://github.com/6RiverSystems/rush-monorepo-boilerplate.git"
  },
  "license": "",
  "author": "",
  "main": "dist/src/index.js",
  "files": [
    "README.md",
    "dist*/src",
    "dist*/index*",
    "src"
  ],
  "scripts": {
    "build": "npm run build:only",
    "rebuild": "npm-run-all clean build",
    "build:only": "tsc",
    "build:watch": "tsc --watch",
    "build:only:gulp": "gulp compile --gulpfile '../../repo-tools/build-configs/gulpfile.js' --cwd './'",
    "build:watch:gulp": "gulp watch --gulpfile '../../repo-tools/build-configs/gulpfile.js' --cwd './'",
    "clean": "rm -rf dist* .rush/temp/package-deps*.json",
    "lint": "../../repo-tools/scripts/lint.sh",
    "test": "npm-run-all lint build test-ci",
    "test-ci": "../../repo-tools/scripts/test.sh",
    "unit": "../../repo-tools/scripts/test.sh --opts test/unit.opts",
    "test:no-cover": "NODE_ENV=test mocha ${MOCHA_OPTS}",
    "test:debug": "npm run test:no-cover -- --debug-brk",
    "coverage": "[ ! -d coverage/.nyc_output ] || NODE_ENV=test nyc report --reporter=text-lcov > coverage/lcov.info",
    "prestart": "npm run build:only",
    "start": "false",
    "release": "true",
    "htmlcov:gen": "NODE_ENV=test nyc report --reporter=html",
    "htmlcov:view": "npm run htmlcov:$(bash -c 'echo ${OSTYPE:0:5}')",
    "htmlcov:linux": "xdg-open ./coverage/.nyc_output/index.html",
    "htmlcov:darwi": "open ./coverage/.nyc_output/index.html",
    "htmlcov": "npm-run-all htmlcov:gen htmlcov:view"
  },
  "devDependencies": {
    "@6river/prettier-config": "1.0.37",
    "@types/chai": "4.2.5",
    "@types/chai-as-promised": "7.1.0",
    "@types/chai-string": "1.4.1",
    "@types/chance": "1.0.1",
    "@types/lodash": "~4.14.169",
    "@types/mocha": "5.2.7",
    "@types/node": "12.12.54",
    "@types/sinon": "7.5.0",
    "@typescript-eslint/eslint-plugin": "4.22.0",
    "@typescript-eslint/parser": "4.22.0",
    "chai": "4.2.0",
    "chai-as-promised": "7.1.1",
    "chai-string": "1.4.0",
    "chance": "1.0.13",
    "eslint": "7.24.0",
    "eslint-config-6river": "5.1.1",
    "eslint-config-google": "0.14.0",
    "eslint-config-prettier": "8.2.0",
    "eslint-plugin-6river": "1.0.6",
    "eslint-plugin-import": "2.22.1",
    "eslint-plugin-mocha": "8.1.0",
    "lodash": "~4.17.21",
    "mocha": "5.1.1",
    "mocha-junit-reporter": "1.15.0",
    "mocha-lcov-reporter": "1.3.0",
    "npm-run-all": "4.1.5",
    "nyc": "13.0.1",
    "prettier": "2.2.1",
    "sinon": "7.5.0",
    "source-map-support": "0.5.16",
    "typescript": "4.3.5"
  },
  "publishConfig": {
    "registry": "https://sixriver.jfrog.io/sixriver/npm-local/"
  }
}
